{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017"],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "declaration": true
  }
}
